<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" 
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/id_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:text="@string/backup_to_server"
                android:textColor="@color/color_lite_blue"
                android:textSize="17sp"
                android:textStyle="bold"
                android:visibility="visible" />
    <RadioGroup
        android:id="@+id/radio_group"
        android:layout_below="@id/id_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="6dp"
        android:visibility="visible"
        android:orientation="vertical">

        <RadioButton
            android:id="@+id/id_never"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:button="@null"
            android:textSize="17sp"
            android:drawableRight="@android:drawable/btn_radio"
            android:text="Never" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="#33000000" />

        <RadioButton
            android:id="@+id/id_when_tap"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:button="@null"
            android:textSize="17sp"
            android:drawableRight="@android:drawable/btn_radio"
            android:text="Only when I tap bak up"/>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="#33000000" />

        <RadioButton
            android:id="@+id/id_daily"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:button="@null"
            android:textSize="17sp"
            android:drawableRight="@android:drawable/btn_radio"
            android:text="Daily" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="#33000000" />

        <RadioButton
            android:id="@+id/id_weekly"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:button="@null"
            android:textSize="17sp"
            android:drawableRight="@android:drawable/btn_radio"
            android:text="Weekly" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="#33000000" />
        <RadioButton
            android:id="@+id/id_monthly"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:button="@null"
            android:textSize="17sp"
            android:drawableRight="@android:drawable/btn_radio"
            android:text="Monthly" />

    </RadioGroup>
    
    <LinearLayout
	    android:orientation="horizontal"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
        android:gravity="right"
	     android:layout_below="@id/radio_group">

    <TextView
        android:id="@+id/id_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/cancel"
         android:layout_gravity="right"
         android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="15dp"
        android:textColor="@color/color_lite_blue"
        android:textSize="16sp"
        android:textStyle="bold"
        android:visibility="visible" />
        <TextView
            android:id="@+id/id_done"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/done"
            android:layout_gravity="right"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="15dp"
            android:textColor="@color/color_lite_blue"
            android:textSize="16sp"
            android:textStyle="bold"
            android:visibility="visible" />
    </LinearLayout>

</RelativeLayout>